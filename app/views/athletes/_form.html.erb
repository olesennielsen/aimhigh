<div class="modal hide" id="myModal">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal">&times;</button>
		<h3>Export Configurations</h3>
	</div>
	<div class="modal-body">
		<%= form_tag(:controller => "athletes", :action => "exportcal", :athlete_id => @athlete.id) do %>	
		
		<%= label_tag(:icalendar, "Export to ICal") %>
		<%= radio_button_tag(:cal, "true", "ical") %>
		<br />
		<br />		
		<%= label_tag(:gcalendar, "Export to Google Calendar") %>
		<%= radio_button_tag(:cal, "gcal") %>
		<br />
		<br />
		Export Events From:
		<br />
		<br />
		<%= select_date Date.today - 30.days, :prefix => 'from' %>		
	</div>
	<div class="modal-footer">
		<%= submit_tag("Export",:class => "btn btn-primary" ) %>
		<a href="#" class="btn" data-dismiss="modal">Close</a>
	</div>
	<% end %>
</div>
