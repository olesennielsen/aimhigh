<% provide(:title, 'Attachment') %>
<div class="alert alert-block">
<%= form_for [@athlete,@attachment], :html => {:multipart => true} do |f| %>
	<fieldset>
	<legend>Attachment</legend>
	<% if @attachment.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@event.errors.count, "error") %> prohibited this attachment from being saved:</h2>
		<ul>
			<% @attachment.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<div class="field">
		<label>Upload File</label>
		<%= f.file_field :file, :required => true %>
