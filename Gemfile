# -*- coding: utf-8 -*-
source 'https://rubygems.org'

ruby '1.9.3'
gem 'rails', '3.2.11'

# DB gems corresponding to heroku standards
  gem 'thin'
  gem 'pg'
  
# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'therubyracer'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :development, :test do
  gem "email_spec"
  gem 'launchy' 
  gem 'rspec-rails'
  gem 'guard-rspec'
  gem 'capybara'
  gem 'rb-fsevent', '~> 0.9.1'
  gem 'factory_girl_rails'
  gem 'faker'
end

# Search features on objects
gem 'ransack'

# Allow æ,ø,å in strings
gem 'magic_encoding'

# Files uploading gem
gem 'carrierwave'

# Spreadsheet parser gem
gem 'roo'

# PDF generator gem
gem "prawn"

# Calendar Event Export
gem 'icalendar'

# Authentication gems
gem 'devise', :git => "git://github.com/plataformatec/devise.git", :branch => 'master'
gem 'devise_invitable'

# Authorization gem
gem 'cancan'

# Styles and jQuery ftw
gem 'nested_form'

gem 'sass-rails'
gem 'bootstrap-sass'

gem "jquery-rails", "~> 2.3.0" #specific branch to ensure ui

# Deploy Analysis
gem 'google-analytics-rails'


